extends ../layout

block content
    h1 Edureka's Courses List
    .row
        .col-sm-8
            a(href="/courses/add", class="btn btn-success float-left") Create New
        .col-sm-4
            
    table.table
        thead
            tr
                th Course ID
                th Course Name
                th Course Duration (hrs)
                th Course Fee (USD)
                th Actions
        tbody
            each course in courses
                tr
                    td=course.Id
                    td=course.name
                    td=course.duration
                    td=course.fee
                    td
                        a(href="/courses/delete/"+course._id, class="btn btn-danger") Delete
                        a(href="/courses/edit/"+course._id, class="btn btn-warning") Edit